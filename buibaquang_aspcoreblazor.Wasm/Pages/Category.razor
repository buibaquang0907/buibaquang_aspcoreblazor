@page "/category"
@using buibaquang_aspcoreblazor.Wasm.Components
<h3>Category</h3>
@if (Categorys == null)
{
    <LoadingIndicator></LoadingIndicator>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Image</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Categorys)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Image</td>
                </tr>
            }
        </tbody>
    </table>
}
