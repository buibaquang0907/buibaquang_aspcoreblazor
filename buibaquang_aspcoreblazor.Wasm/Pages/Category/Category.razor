@page "/category"
@using buibaquang_aspcoreblazor.Wasm.Components

<h3>Category</h3>

@if (Categorys == null)
{
    <LoadingIndicator></LoadingIndicator>
}
else
{
    <div class=" container">
        <div class="col-md-3 d-flex align-items-start">
            <a href="/categoryCreate" class="btn btn-success">Create</a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Categorys)
            {
                <tr>
                    <td>@item.Name</td>
                    <td><img src="@item.Image" alt="Category Image" width="150" height="150" class="img-thumbnail" /></td>
                    <td>
                        <a href="/categoryUpdate/@item.Id" class="btn btn-warning btn-sm">Edit</a>
                        <button class="btn btn-danger btn-sm" @onclick="()=>OnDeleteCategory(item.Id)">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <Confirmation ConfirmationMessage="Are you sure to delete"
                  ConfirmationTitle="Delete Category"
                  ConfirmationChanged="OnConfirmDeleteCategory"
                  @ref="DeleteConfirmation">
    </Confirmation>
}
